<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools">
<!--    Yêu cầu cấp quyền vào kho lưu trữ Media-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

<!--    icon: đặt biểu tượng ứng dụng cho ứng dụng -->
<!--    label=appName -->
    <application
            android:allowBackup="true"
            android:dataExtractionRules="@xml/data_extraction_rules"
            android:fullBackupContent="@xml/backup_rules"
            android:icon="@drawable/logo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/logo"
            android:supportsRtl="true"
            android:theme="@style/Theme.BtlMp4"
            tools:targetApi="31">

<!--        configChanges: activity này sẽ tự xử lý các thay đổi cấu hình cụ thể-->
<!--                mà không làm tắt và tạo lại lại activity. Các thay đổi cấu hình-->
<!--                bao gồm sự thay đổi hướng (orientation), -->
<!--                kích thước màn hình (screenSize) và hướng bố cục (layoutDirection).-->
<!--        exported: Xác định liệu activity có thể được khởi động từ các ứng dụng khác không.-->
<!--                Nếu giá trị là false, activity này không thể được khởi động từ ứng dụng khác. -->
<!--                Điều này giữ cho activity được giữ lại trong phạm vi ứng dụng-->
        <activity
                android:name=".VideoPlayer.VideoPlayerActivity"
                android:configChanges="orientation|screenSize|layoutDirection"
                android:exported="false"/>
        <activity
                android:name=".Folder.VideoFileActivity"
                android:exported="false"/>
        <activity
                android:name=".MainActivity"
                android:exported="false"/>
        <activity
                android:name=".Permission.AllowPermission"
                android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
                android:exported="true">
<!--            Activity này sẽ được mở đầu tiên -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>